<#ValidGoogleJobPosting> @<#ValidSchemaJobPosting> AND {
    schema:title .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#title"
    // techdoc:description "Required. Title of the job, not the title of the posting. Use a concise, readable title. Do not include job codes, addresses, dates, salaries, or company names in the title.";

    schema:description .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#description"
    // techdoc:description "Required. Full description of the job in HTML format. Must be a complete representation of the job, including job responsibilities, qualifications, skills, working hours, education, and experience requirements. Cannot be the same as title.";

    schema:datePosted .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#dateposted"
    // techdoc:description "Required. The original date that employer posted the job in ISO 8601 format. For example, 2017-01-24 or 2017-01-24T19:33:17+00:00.";

    schema:hiringOrganization .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#hiringorganization"
    // techdoc:description "Required. The organization offering the job position. Set to the name of the company hiring, not the specific location. Use 'confidential' for anonymous hiring.";

    schema:validThrough .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#validthrough"
    // techdoc:description "Recommended. The date when the job posting expires in ISO 8601 format. Required if the posting has an expiration date."
    // techdoc:identifier "warning";

    schema:baseSalary .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#basesalary"
    // techdoc:description "Recommended. The actual base salary provided by the employer. Strongly recommended for employers. Must use MonetaryAmount with currency and value."
    // techdoc:identifier "warning";

    schema:employmentType .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#employmenttype"
    // techdoc:description "Recommended. Type of employment (FULL_TIME, PART_TIME, CONTRACTOR, TEMPORARY, INTERN, VOLUNTEER, PER_DIEM, or OTHER)."
    // techdoc:identifier "warning";

    schema:identifier .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#identifier"
    // techdoc:description "Recommended. The hiring organization's unique identifier for the job. Must include name and value properties."
    // techdoc:identifier "warning";

    schema:directApply .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#directapply"
    // techdoc:description "Recommended. Boolean indicating if the URL enables direct application. True means users can complete the full application on your site without multiple logins."
    // techdoc:identifier "warning";
}

<#ValidGoogleJobPostingWithLocation> @<#ValidGoogleJobPosting> AND {
    schema:jobLocation +
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#joblocation"
    // techdoc:description "Required (unless applicantLocationRequirements is present). The physical location(s) where the employee will report to work. Must include addressCountry at minimum.";
}

<#ValidGoogleJobPostingRemote> @<#ValidGoogleJobPosting> AND {
    schema:jobLocationType (@<#ValidSchemaText> AND /TELECOMMUTE/)
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#joblocationtype"
    // techdoc:description "Recommended. Set to TELECOMMUTE for jobs that are 100% remote. Job description must explicitly state the remote nature of work."
    // techdoc:identifier "warning";

    schema:applicantLocationRequirements +
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#applicantlocationrequirements"
    // techdoc:description "Recommended. Geographic location(s) where employees may be located for work-from-home jobs. At least one country must be specified."
    // techdoc:identifier "warning";
}

<#ValidGoogleJobPostingHiringOrganization> @<#ValidSchemaOrganization> AND {
    schema:name .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#hiringorganization-name"
    // techdoc:description "Required. The name of the hiring organization.";

    schema:sameAs .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#hiringorganization-sameas"
    // techdoc:description "Recommended. URL of a reference web page that identifies the organization."
    // techdoc:identifier "warning";

    schema:logo .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#hiringorganization-logo"
    // techdoc:description "Recommended for third-party job sites. URL of the organization's logo. Image aspect ratio should be close to 1:1 (between 0.75 and 2.5)."
    // techdoc:identifier "warning";
}

<#ValidGoogleJobPostingLocation> @<#ValidSchemaPlace> AND {
    schema:address .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#joblocation-address"
    // techdoc:description "Required. The postal address of the job location. Must include at minimum the addressCountry property.";
}

<#ValidGoogleJobPostingPostalAddress> @<#ValidSchemaPostalAddress> AND {
    schema:addressCountry .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#postaladdress-addresscountry"
    // techdoc:description "Required. The country of the job location (use 2-letter ISO 3166-1 alpha-2 country code).";

    schema:streetAddress .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#postaladdress-streetaddress"
    // techdoc:description "Recommended. The street address of the location."
    // techdoc:identifier "warning";

    schema:addressLocality .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#postaladdress-addresslocality"
    // techdoc:description "Recommended. The locality (city or town) of the location."
    // techdoc:identifier "warning";

    schema:addressRegion .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#postaladdress-addressregion"
    // techdoc:description "Recommended. The region (state or province) of the location."
    // techdoc:identifier "warning";

    schema:postalCode .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#postaladdress-postalcode"
    // techdoc:description "Recommended. The postal code of the location."
    // techdoc:identifier "warning";
}

<#ValidGoogleJobPostingBaseSalary> @<#ValidSchemaMonetaryAmount> AND {
    schema:currency .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#basesalary-currency"
    // techdoc:description "Required. The 3-letter ISO 4217 currency code.";

    schema:value .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#basesalary-value"
    // techdoc:description "Required. The value or range of values as a QuantitativeValue with value/minValue/maxValue and unitText (HOUR, DAY, WEEK, MONTH, or YEAR).";
}

<#ValidGoogleJobPostingWithEducation> @<#ValidGoogleJobPosting> AND {
    schema:educationRequirements .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#educationrequirements"
    // techdoc:description "Beta. Educational background needed for the position. Can specify values like high school, associate degree, bachelor degree, professional certificate, postgraduate degree."
    // techdoc:identifier "info";

    schema:experienceRequirements .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#experiencerequirements"
    // techdoc:description "Beta. Description of experience required for the position. Specify minimum months required. Describe complex requirements in the job description instead."
    // techdoc:identifier "info";

    schema:experienceInPlaceOfEducation .
    // techdoc:url "https://developers.google.com/search/docs/appearance/structured-data/job-posting#experienceinplaceofeducation"
    // techdoc:description "Beta. Boolean indicating whether experience is accepted in place of formal education. Requires both experienceRequirements and educationRequirements to be set."
    // techdoc:identifier "info";
}
